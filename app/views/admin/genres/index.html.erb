<div class="container">
    <div class="row text-center">
        <div class="col-md-12 mt-5">
            <h2>ジャンル一覧・追加</h2>
        </div>
    </div>
    <div class="row my-5 d-flex justify-content-center">
        <div class="col-xs-12">
            <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
             <%= f.label :name, "ジャンル名" %>
             <%= f.text_field :name, id: "form" %>
             <%= f.submit "新規登録", class:"btn btn-success ml-4 py-1" %>
            <% end %>
        </div>
    </div>

    <div class="row my-5 justify-content-center">
      <div class="col-lg-5 mt-3">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td align="right"><%= link_to "　編集する　", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

</div>