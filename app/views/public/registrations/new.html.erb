<div class="container">
  <div class="mt-5">
    <h4 class="mb-5 text-color col-3 text-center">新規会員登録</h4>
  </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label "名前", class:"col-md-2" %>

          <%= f.label "（姓）", class: "col-md-1 text-right" %><%= f.text_field :last_name, class:"rounded", autofocus: true, placeholder:"令和" %>
          <%= f.label "（名）", class: "col-md-1 text-right" %><%= f.text_field :first_name, class:"rounded", autofocus: true, placeholder:"道子" %>

        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class:"col-md-2" %>
          <%= f.label "（セイ）", class: "col-md-1 text-right" %><%= f.text_field :last_name_kana, class:"rounded", autofocus: true, placeholder:"レイワ" %>
          <%= f.label "（メイ）", class: "col-md-1 text-right" %><%= f.text_field :first_name_kana, class:"rounded", autofocus: true, placeholder:"ミチコ" %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class:"col-3" %>
          <%= f.email_field :email, class:"rounded", autofocus: true, placeholder:"sample.example.com", autocomplete: "email" %>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class:"col-3" %>
          <%= f.text_field :postal_code, class:"rounded", autofocus: true, placeholder:"0000000" %>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class:"col-3" %>
          <%= f.text_field :address, class:"rounded col-5 mb-3", autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class:"col-3" %>
          <%= f.telephone_field :telephone_number, class:"rounded", autofocus: true, placeholder:"00000000000" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（6文字以上）, class:"col-3" %>
          <%= f.password_field :password, class:"rounded", autocomplete: "new-password" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（確認用）, class:"col-3" %>
          <%= f.password_field :password_confirmation, class:"rounded", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success offset-3 mt-4" %>
        </div>

      <% end %>


      <div class="mt-5">
        <span class="fs-3 fst-italic offset-md-1 bg-light">既に登録済の方</span>
      </div>

      <div class="offset-1 mt-3 mb-4">
        <%= link_to "こちら", new_customer_session_path %>からログインしてください.
      </div>
</div>