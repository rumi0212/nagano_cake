<div class="container">
  <div class="mt-5">
    <span class="fs-3  offset-md-1 bg-light font-monospace">配送先登録/一覧</span>
  </div>
  <%= render "layouts/error", model: @address %>
  <%= form_with model: @address, local: true do |f| %>

    <div class="form-inline">
      <%= f.label :郵便番号（ハイフンなし）, class:"col-3 mt-5" %>
      <%= f.text_field :postal_code, class:"col-3", placeholder:"0000000" %>
    </div>
  　<div class="form-inline">
      <%= f.label :住所, class:"col-1" %>
      <%= f.text_field :address, class:"offset-2 col-6", placeholder:"東京都渋谷区代々木神園町0-0" %>
    </div>
    <div class="form-inline">
      <%= f.label :宛名, class:"col-1 mt-4" %>
      <%= f.text_field :name, class:"offset-2 col-3", placeholder:"令和道子" %>
    </div>
    <%= f.submit "新規登録", class: "btn btn-success mt-5 offset-3" %>
  <% end %>

  <table class="table table-bordered mt-5 mb-5">
    <thead class="bg-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success btn-sm offset-1" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger btn-sm offset-1" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>