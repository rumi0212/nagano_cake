<div class="container">

  <div class="mt-5">
    <span class="fs-3  offset-md-1 bg-light font-monospace">配送先編集</span>
  </div>
  <%= form_with model: @address, local: true do |f| %>
    <div class="form-inline">
      <%= f.label :郵便番号（ハイフンなし）, class:"col-3 mt-5"%>
      <%= f.text_field :postal_code, class:"col-3" %>
    </div>
    <div class="form-inline">
      <%= f.label :住所, class:"col-1 mt-3" %>
      <%= f.text_field :address, class:"offset-2 col-6" %>
    </div>
    <div class="form-inline">
      <%= f.label :宛名, class:"col-1 mt-3" %>
      <%= f.text_field :name, class:"offset-2 col-3" %>
    </div>
    <%= f.submit "変更内容を保存", class:"btn btn-success mt-5 offset-3" %>
  <% end %>

</div>